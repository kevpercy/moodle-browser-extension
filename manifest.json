{
  "manifest_version": 2,
  "name": "Moodle Tracker",
  "version": "1.1",
  "description": "Easily search and find issues in Moodle tracker",
  "update_url": "https://moodle.kevinpercy.com/linux_chrome_autoupdate.xml",
  "permissions": ["activeTab"],
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg"
  },
  "omnibox": {
    "keyword": "mdl"
  },
  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Moodle Tracker",
    "default_popup": "popup/moodle_tracker.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
    	"/node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
    	"moodle_omnibox.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "moodle-tracker-browser-extension@kevinpercy.com"
    }
  }
}

